---
// 知途特色组件

// 导入数据
import { aboutIntroduce } from "../../../data/aboutIntroduce";
---

<div class="flex flex-col items-start">
  <!-- 特色介绍列表 -->
  <span class="text-4xl text-black font-bold">🌈知途星球特色</span>
  {
    aboutIntroduce.map((section) => (
      <Fragment>
        <span class="mt-24 text-xl md:text-3xl text-black tracking-wider mx-auto">
          {section.title}
        </span>
        <span
          class="mt-12 text-xl md:text-2xl text-black tracking-wider
         mx-auto"
          set:html={section.content}
        />
      </Fragment>
    ))
  }
</div>
