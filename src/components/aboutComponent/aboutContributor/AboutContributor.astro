---
// 致谢贡献者组件

// 导入数据
import { aboutContributors } from "../../../data/aboutContributors";
const { description_one, contributors, description_two, description_three } =
  aboutContributors;
---

<div class="flex flex-col items-start">
  <span class="text-4xl text-black font-bold">💌 感谢有你</span>
  <span
    class="mt-12 text-xl md:text-2xl text-black tracking-wider mx-auto"
    set:html={description_one}
  />
  <!-- 贡献者列表 -->
  <ul
    role="list"
    class="mx-auto mt-20 grid max-w-2xl grid-cols-2 gap-x-8 gap-y-16 text-center sm:grid-cols-3 md:grid-cols-4 lg:mx-0 lg:max-w-none lg:grid-cols-5 xl:grid-cols-6"
  >
    {
      contributors.map((person) => (
        <li>
          <img
            class="mx-auto h-24 w-24 rounded-full"
            src={person.avatar}
            alt=""
          />
          <h3 class="mt-6 text-base font-semibold leading-7 tracking-tight text-gray-900">
            {person.name}
          </h3>
          <p class="text-sm leading-6 text-gray-600">{person.role}</p>
        </li>
      ))
    }
  </ul>
  <!-- 描述 1 -->
  <span
    class="mt-24 text-xl md:text-3xl text-black tracking-wider mx-auto"
    set:html={description_two}
  />
  <!-- 描述 2 -->
  <span
    class="mt-12 text-xl md:text-2xl text-black tracking-wider mx-auto"
    set:html={description_three}
  />
</div>
