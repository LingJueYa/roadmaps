---
// 404页面
import { ChevronRightIcon } from "@heroicons/react/24/solid";
import notFound from "../data/404";
import siteInfo from "../config/siteInfo";
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="generator" content={Astro.generator} />
    <title>{siteInfo.title}</title>
    <meta name="description" content={siteInfo.description} />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=yes, initial-scale=1.0, maximum-scale=3.0, minimum-scale=1.0"
    />
    <meta http-equiv="Content-Language" content="en" />
  </head>
  <body class="flex min-h-screen flex-col">
    <div class="bg-white">
      <main class="mx-auto w-full max-w-7xl px-6 pb-16 pt-10 sm:pb-24 lg:px-8">
        <img
          class="mx-auto h-10 w-auto sm:h-12"
          src={siteInfo.logo}
          alt="知途"
        />
        <div class="mx-auto mt-20 max-w-2xl text-center sm:mt-24">
          <p class="text-base font-semibold leading-8 text-indigo-600">404</p>
          <h1
            class="mt-4 text-3xl font-bold tracking-tight text-gray-900 sm:text-5xl"
          >
            {notFound.title}
          </h1>
          <p
            class="mt-4 text-base leading-7 text-gray-600 sm:mt-6 sm:text-lg sm:leading-8"
          >
            {notFound.description}
          </p>
        </div>
        <div class="mx-auto mt-16 flow-root max-w-lg sm:mt-20">
          <ul
            role="list"
            class="-mt-6 divide-y divide-gray-900/5 border-b border-gray-900/5"
          >
            {
              notFound.links.map((link: NotFoundLink) => (
                <li class="relative flex gap-x-6 py-6">
                  <div class="flex h-10 w-10 flex-none items-center justify-center rounded-lg shadow-sm ring-1 ring-gray-900/10">
                    <div class="h-6 w-6 text-indigo-600">
                      <link.icon aria-hidden="true" />
                    </div>
                  </div>
                  <div class="flex-auto">
                    <h3 class="text-sm font-semibold leading-6 text-gray-900">
                      <a href={link.href}>
                        <span class="absolute inset-0" aria-hidden="true" />
                        {link.name}
                      </a>
                    </h3>
                    <p class="mt-2 text-sm leading-6 text-gray-600">
                      {link.description}
                    </p>
                  </div>
                  <div class="flex-none self-center">
                    <ChevronRightIcon
                      className="h-5 w-5 text-gray-400"
                      aria-hidden="true"
                    />
                  </div>
                </li>
              ))
            }
          </ul>
          <div class="mt-10 flex justify-center">
            <a href="/" class="text-sm font-semibold leading-6 text-indigo-600">
              <span aria-hidden="true">&larr;</span>
              {notFound.backText}
            </a>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
